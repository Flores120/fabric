<form>
  {{#link-to 'store' store.id}}
  <h4>{{product.title}}</h4>
  {{/link-to}}
  <h4>${{product.cost}}</h4>
  <img src={{product.image}} alt={{product.title}} />
  <br>
  <button {{action 'addToCart' product}}>Add To Cart</button>
</form>
<button {{action 'destroyProduct' product}}>Delete</button>
